@model ChangePasswordViewModel

@{
    ViewBag.Title = "تغير الرقم السرى";

}

<div class="container float-right text-right">
    <h2>تغير الرقم السرى</h2>
    <hr />

    <div class="row mt-5">
        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="All" class="alert alert-danger"></div>
                <input asp-for="Id" type="hidden" />

                <div class="form-group">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="form-control text-right" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control text-right mr-2" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <a href="##" onClick="history.go(-1); return false;" class="btn btn-danger m-3 btn-lg"> الرجوع</a>

                <button type="submit" class="btn btn-primary btn-lg">تعديل</button>
            </form>
        </div>
    </div>
</div>