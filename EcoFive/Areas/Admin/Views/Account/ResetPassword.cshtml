@model ResetPasswordViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar">


<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>إعادة تعيين كلمة المرور</title>
    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/app.min.css">
    <link rel="stylesheet" href="~/Templetes/Admin/assets/bundles/jquery-selectric/selectric.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/style.css">
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/components.css">
    <!-- Custom style CSS -->
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/custom.css">
    <link rel='shortcut icon' type='image/x-icon' href='~/Templetes/Admin/assets/img/favicon.ico' />

    <link href="~/css/site.css" asp-append-version="true" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cairo&display=swap" rel="stylesheet">

    @*to active client side validation*@
    <script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true"></script>

    <style>
        #dntCaptchaImg {
            margin-left: 84px;
            height: 50px;
            width: 110px
        }

        .card .card-header {
            display: initial
        }
    </style>

</head>

<body>
    <div class="loader"></div>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        <div class="card card-primary">
                            <div class="card-header text-center">
                                <h4 class="mt-3">إعادة تعيين كلمة المرور</h4>
                            </div>
                            <div class="card-body">
                                <form method="POST" novalidate="">
                                    <div asp-validation-summary="All" class="alert alert-danger text-right pr-5"></div>
                                    <input asp-for="Token" type="hidden" />
                                    <input asp-for="Email" type="hidden" />


                                    <div class="form-group  text-right">
                                        <label asp-for="Password">كلمه المرور</label>
                                        <input asp-for="Password" class="form-control text-right pr-5 pwstrength" tabindex="0" autofocus data-indicator="pwindicator">
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                    <div class="form-group  text-right">
                                        <label asp-for="ConfirmPassword">تاكيد كلمه المرور</label>
                                        <input asp-for="ConfirmPassword" class="form-control text-right pr-5" tabindex="1">
                                        <span asp-validation-for="ConfirmPassword"></span>
                                        <div id="pwindicator" class="pwindicator  mt-5">
                                            <div class="bar"></div>
                                            <div class="label"></div>
                                        </div>

                                    </div>



                                    <div class="float-right pt-4 pb-4 ">
                                        <dnt-captcha asp-captcha-generator-max="999999"
                                                     asp-captcha-generator-min="111111"
                                                     asp-captcha-generator-language="English"
                                                     asp-captcha-generator-display-mode="ShowDigits"
                                                     asp-use-relative-urls="false"
                                                     asp-placeholder="ادخل كلمه التحقق"
                                                     asp-validation-error-message="الرجاء إدخال رمز التحقق الصحيح"
                                                     asp-font-name="Cairo"
                                                     asp-font-size="14"
                                                     asp-fore-color="#333333"
                                                     asp-back-color="#ccc"
                                                     asp-text-box-class=" form-control text-right pr-5 "
                                                     asp-text-box-template="<span class='input-group-prepend'><span class='form-group-text'></span ></span>{0}"
                                                     asp-validation-message-class="text-danger"
                                                     asp-use-noise="false" />
                                    </div>


                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="2">
                                            استعاده حسابى
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- General JS Scripts -->
    <script src="~/Templetes/Admin/assets/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="~/Templetes/Admin/assets/bundles/jquery-pwstrength/jquery.pwstrength.min.js"></script>
    <script src="~/Templetes/Admin/assets/bundles/jquery-selectric/jquery.selectric.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/Templetes/Admin/assets/js/page/auth-register.js"></script>
    <!-- Template JS File -->
    <script src="~/Templetes/Admin/assets/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="~/Templetes/Admin/assets/js/custom.js"></script>
</body>


</html>