@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar">


<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>تسجيل مستخدم جديد</title>
    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/app.min.css">
    <link rel="stylesheet" href="~/Templetes/Admin/assets/bundles/jquery-selectric/selectric.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/style.css">
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/components.css">
    <!-- Custom style CSS -->
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/custom.css">
    <link rel='shortcut icon' type='image/x-icon' href='~/Templetes/Admin/assets/img/favicon.ico' />
    <script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>

    <link href="~/css/adminSite.css" asp-append-version="true" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cairo&display=swap" rel="stylesheet">

    @*to active client side validation*@
    <script src="~/lib/jquery-validate/jquery.validate.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true"></script>

    <style>
        #dntCaptchaImg {
            margin-left: 84px;
            height: 50px;
            width: 110px
        }

        .card .card-header {
            display: initial
        }
    </style>

</head>

<body>
    <div class="loader"></div>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        <div class="card card-primary">
                            <form method="POST" novalidate="">

                                <div class="card-header text-center">

                                    <h4 class="mt-3">تسجيل مستخدم جديد</h4>

                                    <div class="text-right mt-5">
                                        <input class="form-check-input" asp-for="IsSupplier" type="checkbox" checked="@ViewBag.IsSupplier" id="defaultCheck1">
                                        <label class="form-check-label">
                                            تسجيل مورد جديد
                                        </label>
                                    </div>
                                    <div class="text-right mt-2">
                                        <input class="form-check-input" asp-for="IsCaptain" type="checkbox" checked="@ViewBag.IsCaptain" id="defaultCheck1">
                                        <label class="form-check-label">
                                            ( تسجيل كابتن جديد ( توصيل
                                        </label>
                                    </div>
                                </div>

                                <div class="card-body">

                                    <div asp-validation-summary="All" class="alert alert-danger text-right"></div>

                                    <div class="row">
                                        <div class="form-group col-6 text-right">
                                            <label asp-for="LastName" class="textInput"></label>
                                            <input asp-for="LastName" class="form-control text-right" autofocus>
                                            <span asp-validation-for="LastName"></span>
                                        </div>
                                        <div class="form-group col-6 text-right">
                                            <label asp-for="FirstName" class="textInput"></label>
                                            <input asp-for="FirstName" class="form-control text-right">
                                            <span asp-validation-for="FirstName"></span>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="form-group col-6 text-right ">
                                            <label asp-for="Email" class="textInput"></label>
                                            <input asp-for="Email" class="form-control text-right">
                                            <span asp-validation-for="Email"></span>
                                        </div>

                                        <div class="form-group col-6 text-right">
                                            <label asp-for="UserName" class="textInput"></label>
                                            <input asp-for="UserName" type="text" class="form-control text-right">
                                            <span asp-validation-for="UserName"></span>

                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="form-group col-6 text-right">
                                            <label asp-for="ConfirmPassword" class="textInput"></label>

                                            <div class="toPassword">
                                                <span class="input-group-text inputPassword" id="basic-addon1">
                                                    <input asp-for="ConfirmPassword" class="form-control text-right" id="passwordRegister1">
                                                    <i class="far fa-eye" id="togglePasswordRegister1" onclick="togglePassword('#togglePasswordRegister1','#passwordRegister1')"></i>
                                                </span>
                                                <span asp-validation-for="ConfirmPassword"></span>
                                            </div>
                                            <div id="pwindicator" class="pwindicator">
                                                <div class="bar"></div>
                                                <div class="label"></div>
                                            </div>
                                        </div>


                                        <div class="form-group col-6 text-right">
                                            <label asp-for="Password" class="textInput"></label>

                                            <div class="toPassword">
                                                <span class="input-group-text inputPassword" id="basic-addon1">
                                                    <input asp-for="Password" class="form-control text-right pwstrength" id="passwordRegister2" data-indicator="pwindicator">
                                                    <i class="far fa-eye" id="togglePasswordRegister2" onclick="togglePassword('#togglePasswordRegister2','#passwordRegister2')"></i>
                                                </span>
                                                <span asp-validation-for="Password"></span>
                                            </div>

                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="form-group col-6 text-right ">
                                            <label asp-for="GovernorateId" class="textInput"></label>
                                            <select dir="rtl" id="ddGovernorate" asp-for="GovernorateId" asp-items="@(new SelectList(string.Empty, "Id", "Name"))" class="form-control"></select>
                                            <span asp-validation-for="GovernorateId"></span>

                                        </div>

                                        <div class="form-group col-6 text-right ">
                                            <label asp-for="CountryId" class=" textInput"></label>
                                            <select dir="rtl" id="ddCountries" asp-for="CountryId" asp-items="@(new SelectList(ViewBag.Countries, "Id", "Name"))" class="form-control"><option>أختر</option></select>
                                            <span asp-validation-for="CountryId"></span>

                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="form-group col-6 text-right ">
                                            <label asp-for="PhoneNumber" class="textInput"></label>
                                            <input asp-for="PhoneNumber" class="form-control text-right ">
                                            <span asp-validation-for="PhoneNumber"></span>

                                        </div>

                                        <div class="form-group col-6 text-right ">
                                            <label asp-for="CityId" class="textInput">المدينة</label>
                                            <select dir="rtl" id="ddCity" asp-for="CityId" asp-items="@(new SelectList(string.Empty, "Id", "Name"))" class="form-control"></select>
                                            <span asp-validation-for="CityId"></span>

                                        </div>
                                    </div>

                                    <div class="float-right pt-4 pb-4 ">
                                        <dnt-captcha asp-captcha-generator-max="999999"
                                                     asp-captcha-generator-min="111111"
                                                     asp-captcha-generator-language="English"
                                                     asp-captcha-generator-display-mode="ShowDigits"
                                                     asp-use-relative-urls="false"
                                                     asp-placeholder="ادخل رمز التحقق"
                                                     asp-validation-error-message="الرجاء إدخال رمز التحقق الصحيح"
                                                     asp-font-name="Cairo"
                                                     asp-font-size="14"
                                                     asp-fore-color="#333333"
                                                     asp-back-color="#ccc"
                                                     asp-text-box-class=" form-control text-right "
                                                     asp-text-box-template="<span class='input-group-prepend'><span class='form-group-text '></span ></span>{0}"
                                                     asp-validation-message-class="text-danger"
                                                     asp-use-noise="false" />
                                    </div>


                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block" style="font-size: 17px !important">
                                            تسجيـل
                                        </button>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- General JS Scripts -->
    <script src="~/Templetes/Admin/assets/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="~/Templetes/Admin/assets/bundles/jquery-pwstrength/jquery.pwstrength.min.js"></script>
    <script src="~/Templetes/Admin/assets/bundles/jquery-selectric/jquery.selectric.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/Templetes/Admin/assets/js/page/auth-register.js"></script>
    <!-- Template JS File -->
    <script src="~/Templetes/Admin/assets/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="~/Templetes/Admin/assets/js/custom.js"></script>


    <script>

        $(function () {
            $("#ddCountries").change(function () {

                $.getJSON("/Admin/Account/FindGovernorates",
                    { id: $("#ddCountries").val() },
                    function (d) {
                        var row = "";
                        $("#ddGovernorate").empty();
                        $("#ddCity").empty();
                        row += "<option selected disabled >أختر</option>";
                        $.each(d,
                            function (i, v) {
                                row += "<option value=" + v.id + ">" + v.name + "</option>";
                            });
                        $("#ddGovernorate").html(row);
                    });
            });
            $("#ddGovernorate").change(function () {
                $.getJSON("/Admin/Account/Findcities",
                    { id: $("#ddGovernorate").val() },
                    function (d) {
                        var row = "";
                        $("#ddCity").empty();
                        row += "<option selected disabled >أختر</option>";
                        $.each(d,
                            function (i, v) {
                                row += "<option value=" + v.id + ">" + v.name + "</option>";
                            });
                        $("#ddCity").html(row);
                    });
            });
        });

    </script>
    <script src="~/js/togglePassword.js" asp-append-version="true"></script>

</body>


</html>