@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
    ViewBag.Title = "اضافه او حذف المستخدمين للدور";
}


<div class="container  text-right float-right">
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h2>اضافه او حذف المستخدمين للدور</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check  float-right">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input  " />
                        <label class="form-check-label float-right" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-danger m-3" style="width: auto"> الغاء</a>
                <input type="submit" value="تعديل" class="btn btn-primary" style="width: auto" />
            </div>
        </div>
    </form>
</div>