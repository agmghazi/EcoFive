@model EditRoleViewModel

@{
    ViewBag.Title = "تعديل الدور للمستخدم ";
}
<div class="container float-right text-right">
<h2 class="mb-5">تعديل الدور للمستخدم</h2>

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <div class="form-group row ">
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control text-right" />
        </div>
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control text-right" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <a asp-controller="Administraion" asp-action="ListRoles" class="btn btn-danger m-3">الغاء</a>
            <button type="submit" class="btn btn-primary">تعديل</button>
        </div>
    </div>

    <div class="card mt-5">
        <div class="card-header">
            <h3>المستخدمين المرطبتين بالدور</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">لا يوجد </h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administraion" asp-action="EditUsersInRole"
               asp-route-roleId="@Model.Id" class="btn btn-primary" style="width: auto">إضافه او حذف المستخدمين</a>
        </div>
    </div>
</form>
</div>