
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="ar">


<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>خطئ فى المعالجة</title>
    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/app.min.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/style.css">
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/components.css">
    <!-- Custom style CSS -->
    <link rel="stylesheet" href="~/Templetes/Admin/assets/css/custom.css">
    <link rel='shortcut icon' type='image/x-icon' href='~/Templetes/Admin/assets/img/favicon.ico' />
    <link href="~/css/adminSite.css" asp-append-version="true" rel="stylesheet" />
   

</head>

<body>
    <div class="loader"></div>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="page-error">
                    <div class="page-inner">
                        <h1 class="mb-5">خطئ فى المعالجة</h1>
                        <div class="page-description">
                            @if (ViewBag.ErrorTitle == null)
                            {

                                <h3 class="mb-3">
                                    حدث خطأ أثناء معالجة طلبك.
                                    تم إخطار الفريق ونعمل على الإصلاح

                                </h3>
                                <h5 class="mb-5"> agmghazi@hotmail.com للتواصل مع الدعم الفنى</h5>
                                <hr />
                                <div class="alert alert-danger mb-5">
                                    <h3 class="mb-3">تفاصيل الخطئ</h3>
                                    <hr />
                                    <h5>تاريخ الخطئ</h5>
                                    <p class="mb-3">@DateTime.Now</p>
                                    <h4> agmghazi@hotmail.com يرجى حفظ توقيت الخطئ وارساله للدعم الفنى على</h4>
                                </div>

                            }
                            else
                            {

                                <div class="alert alert-danger mb-5">
                                    <h3 class="mb-3">تفاصيل الخطئ</h3>
                                    <hr />
                                    <h5>@ViewBag.ErrorTitle</h5>
                                    <h4>@ViewBag.ErrorMessage</h4>
                                </div>

                            }


                        </div>
                        <div class="page-search">
                            <form>
                                <div class="form-group floating-addon floating-addon-not-append">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="mt-3">
                                <a asp-action="Index" asp-controller="Home" asp-area="">
                                    إضغط هنا للذهاب للصفحة الرئيسية
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- General JS Scripts -->
    <script src="~/Templetes/Admin/assets/js/app.min.js"></script>
    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <!-- Template JS File -->
    <script src="~/Templetes/Admin/assets/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="~/Templetes/Admin/assets/js/custom.js"></script>
</body>


</html>