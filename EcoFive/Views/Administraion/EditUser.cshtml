@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>تعديل المستخدم</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control text-right">
        </div>
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control text-right">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control text-right">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="City" class="form-control text-right">
        </div>
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <a asp-controller="Home" asp-action="Index" class="btn btn-danger">الغاء</a>
            <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-success" style="width: auto">تغير كلمه المرور</a>
            <button type="submit" class="btn btn-primary">تعديل</button>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>ادوار المستخدم</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">لا يوجد</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" style="width: auto" class="btn btn-primary">
                تعديل الادوار
            </a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h3>الادوار الفرعية المرتبطة بالمستخدم</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">لا يوجد</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id"
               style="width: auto" class="btn btn-primary">
                تعديل الادوار الفرعية
            </a>
        </div>
    </div>
</form>
