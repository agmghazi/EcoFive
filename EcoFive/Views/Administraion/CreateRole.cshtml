@model CreateRoleViewModel
@{
    ViewBag.Title = "Create Role";

}

<h1>انشاء الدور</h1>


<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control text-right" />
                <span asp-validation-for="RoleName"></span>
            </div>

            <a asp-action="ListRoles" class="btn btn-danger" style="width:auto">الغاء</a>

            <button type="submit" class="btn btn-primary" style="width: auto">انشاء الدور</button>

        </form>
    </div>
</div>
