
@model ContactViewModel

@{
    ViewBag.Title = "اتصل بنا";
}
<!--Hero Section-->
<div class="hero-section login-background">
    <h1 class="page-title">اتصل بنا</h1>
</div>

<!--Navigation section-->
<div class="container text-right">
    <nav class="biolife-nav">
        <ul>
            <li class="nav-item"><span class="current-page">اتصل بنا</span></li>

            <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="permal-link">الصفحة الرئيسية</a></li>
        </ul>
    </nav>
</div>

<div class="page-contain login-page">

    <!-- Main content -->
    <div id="main-content" class="main-content">
        <div class="container">

            <div class="row">

                <!--Go to Register form-->
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                    <div class="register-in-container text-right">
                        <div class="intro ">
                            <h4 class="box-title float-right">عميل جديد؟</h4>
                            <p class="sub-title ">: أنشئ حسابًا معنا وستتمكن من </p>
                            <ul class="lis text-right">
                                <li>تحقق أسرع</li>
                                <li>حفظ عدة شحنات وصناديق</li>
                                <li>الوصول إلى سجل الطلبات الخاص بك</li>
                                <li>تتبع الطلبات الجديدة</li>
                                <li>حفظ العناصر في قائمة الرغبات الخاصة بك</li>
                            </ul>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-bold">انشاء الحساب</a>
                        </div>
                    </div>
                </div>

                <!--Form Sign In-->
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="signin-container text-right">
                        <form method="post">
                            <div asp-validation-summary="All" class="alert alert-danger"></div>

                            <p class="form-row">
                                <label asp-for="Name" class="textInput" style="top: 11px !important"></label>
                                <input asp-for="Name" class="form-control w-25 text-right float-right">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </p>

                            <p class="form-row">
                                <label asp-for="Email" class="textInput" style="top: 11px !important"></label>
                                <input asp-for="Email" class="form-control w-25 text-right float-right">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </p>

                            <p class="form-row">
                                <label asp-for="PhoneNumber" class="textInput" style="top: 11px !important"></label>
                                <input asp-for="PhoneNumber" class="form-control w-25 text-right float-right">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </p>

                            <p class="form-row">
                                <label asp-for="Message" class="textInput" style="top: 11px !important"></label>
                                <textarea asp-for="Message" class="form-control w-25 text-right float-right" cols="30" rows="9" style="height: auto !important"> </textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </p>


                            <br /><br />
                            <dnt-captcha asp-captcha-generator-max="999999"
                                         asp-captcha-generator-min="111111"
                                         asp-captcha-generator-language="English"
                                         asp-captcha-generator-display-mode="ShowDigits"
                                         asp-use-relative-urls="true"
                                         asp-placeholder="ادخل كلمه التحقق"
                                         asp-validation-error-message="الرجاء إدخال كلمة التحقق الصحيحة"
                                         asp-font-name="Cairo"
                                         asp-font-size="20"
                                         asp-fore-color="#333333"
                                         asp-back-color="#ccc"
                                         asp-text-box-class="text-box form-control w-25 text-right float-right"
                                         asp-text-box-template="<span class='input-group-prepend'><span class='form-group-text '></span></span>{0}"
                                         asp-validation-message-class="text-danger m-3"
                                         asp-use-noise="false" />
                            <br />
                            <br />

                            <p class="form-row wrap-btn">
                                <button class="btn btn-submit btn-bold pr-3" type="submit">ارسـال الرسـالة</button>

                            </p>


                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



<div class="container">
    <div class="row"> </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="col-md-3">User</div>
                <div class="col-md-9"><input type="text" id="userName" /></div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="col-md-3">Message</div>
                <div class="col-md-9">
                    <input type="text" id="userMessage" />
                    <input type="button" id="sendMessage" value="Send Message" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6"> </div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>


@section Scripts{
    <script>

        $("#chProfAlertmsg").fadeTo(3000, 600).slideUp(2000,
            function () {
                $("#chProfAlertmsg").hide();
            });

    </script>

    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js" asp-append-version="true"></script>

    <script src="~/js/signalRChat.js" asp-append-version="true"></script>
    <script>
        InvokeSignalR("02174cf0–9412–4cfe-afbf-59f706d72cf6");
    </script>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-has-icon w-25 text-right" id="chProfAlertmsg">
        <div class="alert-icon"><i class="far fa-lightbulb"></i></div>
        <div class="alert-body">
            <div class="alert-title">تنبية</div>
            @ViewBag.Message
        </div>
    </div>

}

